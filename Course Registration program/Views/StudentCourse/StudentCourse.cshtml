@model List<StudentCourse>

@{
    Layout = "_Layout";
}

<!DOCTYPE html>

<html lang="en">
<head>
    <title>Course Registration</title>
</head>
<body>
<div>
    <table>
        <tr>
            <th>Register</th>
            <th>Deregister</th>
        </tr>
        <tr>
            <td>
                <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createModal">Register</button>
            </td>
            <td>
                <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#deleteModal">Deregister</button>
            </td>
        </tr>
    </table>
</div>
<div class="modal fade" id="createModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Register</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form method="post" action="/StudentCourse/registerCourse">
                    <label for="studentID">Student ID:</label>
                    <input type="text" id="studentID" name="sid" required><br><br>
                    <label for="courseID">Course to Register:</label>
                    <input type="text" id="courseID" name="cid" required><br><br>
                    <input type="submit" value="Submit">
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                @* <button type="button" class="btn btn-primary">Save changes</button> *@
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Deregister</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form method="post" action="/StudentCourse/deregisterCourse">
                    <label for="assignmentID">Assignment ID:</label>
                    <input type="text" id="assignmentID" name="assignID" required><br><br>
                    <input type="submit" value="Submit">
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                @* <button type="button" class="btn btn-primary">Save changes</button> *@
            </div>
        </div>
    </div>
</div>
<div>
    <h1>Registration List</h1>
    <table class="table-bordered align-baseline">
        <tr>
            <th>Assignment ID</th>
            <th>Student ID</th>
            <th>Course ID</th>
        </tr>
        @foreach (var m in Model)
        {
            <tr>
                <td>
                                    <p>@m.assignmentID</p></td>
                <td>
                    <p>@m.studentID</p></td>
                <td>
                    <p>@m.courseID</p></td>
            </tr>
        }
    </table>
</div>
</body>
</html>